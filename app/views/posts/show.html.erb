<div class="container">
      <p>
        <strong>Identifiant de l'auteur</strong>:
        <%= @post.user_id %>
      </p>

      <p>
        <strong>Titre:</strong><br>
        <%= @post.title %>
      </p>

      <p>
        <strong>Sous-titre:</strong><br>
        <%= @post.sub_title %>
      </p>

      <p>
        <strong>Auteur:</strong><br>
        <%= @post.author %>
      </p>

      <p>
        <strong>Contenu:</strong><br>
        <%= @post.body %>
      </p>

      <%= link_to 'Modifier', edit_post_path(@post), class: "buttonGreen" %> |
      <%= link_to 'Retour', posts_path, class: "buttonBlue" %>

</div>

